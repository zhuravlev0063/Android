<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎨 Выбор цвета"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Палитра цветов -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Палитра цветов:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- ★★★ Matrix в центре ★★★ -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="4dp"
            android:background="#F8F9FA"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <GridLayout
                    android:id="@+id/colorGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="13"
                    android:rowCount="13"
                    android:padding="2dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <!-- Ручной ввод -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✏️ Ручной ввод"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- HEX ввод -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="HEX код:"
                android:textSize="13sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/hexInput"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="#2196F3"
                android:textSize="14sp"
                android:background="@drawable/edit_text_rounded"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:inputType="textCapCharacters"
                android:maxLines="1" />

        </LinearLayout>

        <!-- RGB ввод -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="RGB:"
                android:textSize="13sp"
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/redInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="33"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text_rounded"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:layout_marginEnd="4dp" />

                <EditText
                    android:id="@+id/greenInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="150"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text_rounded"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:layout_marginEnd="4dp" />

                <EditText
                    android:id="@+id/blueInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="243"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text_rounded"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Превью и кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Превью:"
                android:textSize="13sp"
                android:textColor="#666666" />

            <View
                android:id="@+id/colorPreview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#2196F3"
                android:layout_marginEnd="16dp"
                android:elevation="4dp" />

            <!-- Кнопка Готово -->
            <Button
                android:id="@+id/doneButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Готово"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_rounded"
                android:layout_marginEnd="8dp" />

            <!-- Кнопка Отмена -->
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Отмена"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="@drawable/button_cancel"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>